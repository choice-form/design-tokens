{
  "name": "@choiceform/design-tokens-workspace",
  "version": "0.1.0",
  "description": "Design tokens system workspace",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter examples dev",
    "dev:tokens": "pnpm --filter @choiceform/design-tokens dev",
    "type-check": "pnpm -r type-check",
    "lint:css": "pnpm --filter @choiceform/design-tokens lint:css",
    "lint:css:fix": "pnpm --filter @choiceform/design-tokens lint:css:fix",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "dev:examples": "pnpm --filter @choiceform/design-tokens-examples dev",
    "build:examples": "pnpm --filter @choiceform/design-tokens-examples build"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
